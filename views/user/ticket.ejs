<%- include('../partials/header.ejs') %>
<h1 class="display-5 fw-bold"
style="text-align: left; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; background-color: #2c2e31; font-size: 35px;  color: rgb(255, 255, 255); padding: 20px 20px;">
&nbsp;Your Ticket</h1>

<div class="container-fluid">
    <div class="col">
      <div style="padding: 30px;" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% Reserve.forEach(function(thisReserve){ %>
          <div class="col">
            <div class="card shadow-sm" style=" max-width: 18rem; padding-left: 5px;">
                <img src="<%= thisReserve.moviesImage %>" class="card-img-top" max-width="150px" max-height="270px">
                <div class="card-body" style="color: #2c2e31; text-decoration: none;">
                  <h4 class="card-title" style="text-align: center;" >
                    <%= thisReserve.moviesName %>
                  </h4>
                  <h6>Seat: &emsp;&emsp;&nbsp;<%= thisReserve.seats %>
                  </h6>
                  <h6>Date: &emsp;&emsp;<%= thisReserve.date %>
                  </h6>
                  <h6>Time: &emsp;&emsp;<%= thisReserve.time %>
                  </h6>
                  <h6>Theater: &ensp;&nbsp;<%= thisReserve.theater %>
                  </h6>
                </div>
            </div>
          </div>
          <% }); %>
      </div>
    </div>
  </div>

    <%- include('../partials/footer.ejs') %>