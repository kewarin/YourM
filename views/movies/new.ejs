<%- include('../partials/header.ejs') %>

  <!-- Banner -->

  <h3 class="display-5 fw-bold"
    style="text-align: center; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; background-color: #2c2e31; color: rgb(255, 255, 255); padding: 20px;">
    New Movies</h3>
  <form action="/movie/new" method="POST" enctype="multipart/form-data">
    <div class="container-fluid" style="height: 100%; width: 100%;">
      <div class="container-fluid mt-5 mb-5" style="width: 800px;">
        <div class="row mb-3">
          <label class="col-sm-2 col-form-label">Name :</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" required="required" name="movies[name]" placeholder="Name Movies">
          </div>
        </div>
        <div class="row mb-3">
          <label class="col-sm-2 col-form-label">Desc :</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" required="required" name="movies[desc]" placeholder="Description">
          </div>
        </div>
        <div class="row mb-3">
          <label class="col-sm-2 col-form-label">Genre :</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" required="required" name="movies[genre]"
              placeholder="Action/Drama/Thriller/Sci-fi/Fantasy ">
          </div>
        </div>
        <div class="row mb-3">
          <label class="col-sm-2 col-form-label">Runtime :</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" required="required" name="movies[runtime]" placeholder="Ex: 3h 2m">
          </div>
        </div>
        <div class="row mb-3">
          <label class="col-sm-2 col-form-label">Type :</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" required="required" name="movies[type]" placeholder="showing/coming">
          </div>
        </div>
        <div class="row mb-3">
          <label class="col-sm-2 col-form-label">Score :</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" required="required" name="movies[score]" placeholder="Ex: 8.2">
          </div>
        </div>
        <hr>
        <div class="row mb-3">
          <label class="form-label">Poster :</label>
          <div class="col-sm-10">
            <input type="file" class="form-control" required="required" name="image" accept="image/*">
          </div>
        </div>
        <div class="row mb-3">
          <label class="form-label">Trailer :</label>
          <div class="col-sm-10">
            <input type="url" class="form-control" name="movies[trailer]" required="required"
              placeholder="Youtube embed URL ">
          </div>
        </div>

        <div style="height: 45px;"></div>
        <div class="container-fluid" style="height: 100%; position: relative;">
          <button class="btn btn-outline-secondary" type="submit"
            style="height: 50px; width: 100px; bottom: 15px; right: 15px; position: absolute;">Submit</button>
        </div>

      </div>
    </div>
  </form>


  <%- include('../partials/footer.ejs') %>